<body>

<h2>Lottery Ticket Orders/History</h2>

<table id="orderTable">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Lottery Numbers</th>
            <th>Order Date</th>
            <th>Amount Paid</th>
        </tr>
    </thead>
    <tbody>
        <!-- Sample Data -->
